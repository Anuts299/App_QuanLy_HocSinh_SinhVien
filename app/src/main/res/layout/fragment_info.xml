<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.InfoFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/breadcrumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/breadcrumb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang chủ"
            android:textColor="@color/Cornflower_blue"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/Cornflower_blue" />

        <TextView
            android:id="@+id/breadcrumb_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới thiệu ứng dụng"
            android:textSize="16dp"
            android:textColor="@color/Cornflower_blue" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp">

        <!-- Tên ứng dụng và mô tả -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_box"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Studify"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/Bittersweet" />

                <TextView
                    android:id="@+id/tvShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ứng dụng giúp bạn quản lý học sinh - sinh viên dễ dàng, nhanh chóng"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/Cornflower_blue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Các tính năng nổi bật -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_box"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvFeaturesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tính năng nổi bật"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/Bittersweet" />

                <TextView
                    android:id="@+id/tvFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Quản lý danh sách sinh viên\n• Quản lý danh sách khoa, lớp học, môn học, giảng viên,...\n• Theo dõi  và chấm điểm\n• Lập báo cáo và thống kê"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/Cornflower_blue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lợi ích -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_box"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvBenefitsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lợi ích"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/Bittersweet" />

                <TextView
                    android:id="@+id/tvBenefits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Tiết kiệm thời gian\n• Giảm sai sót trong quản lý\n• Theo dõi dễ dàng tình hình học tập"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/Cornflower_blue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Đội ngũ phát triển -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_box"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTeamTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đội ngũ phát triển"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/Bittersweet" />
                <TextView
                    android:id="@+id/tvTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Sinh Viên Trường Cao Đẳng Kinh tế - Kỹ thuật Cần Thơ"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/Cornflower_blue" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <!-- Hàng 1: CircleImageView -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <!-- CircleImageView 1 -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civImage1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/leanhtuan"
                            app:civ_border_color="@color/Bittersweet" />



                    </TableRow>

                    <!-- Hàng 2: Tên của hình -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <!-- Tên cho hình ảnh 1 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="Lê Anh Tuấn"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/Cornflower_blue" />

                    </TableRow>

                </TableLayout>
                <TextView
                    android:id="@+id/tvTeam2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Thông tin liên hệ: letuananh7022020@gmail.com"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/Cornflower_blue" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
