<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardClass"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImangeClass"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lecturer_14661120" />
        <TextView
            android:id="@+id/tv_name_lecturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên giảng viên"
            android:textColor="@color/Cornflower_blue"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/recImangeClass"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tv_name_faculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên khoa"
            android:textColor="@color/Cornflower_blue"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/recImangeClass"
            android:layout_marginTop="45dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>