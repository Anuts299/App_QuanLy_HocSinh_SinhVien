<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".student_manage.DetailFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/breadcrumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/breadcrumb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang chủ"
            android:textColor="@color/Cornflower_blue"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/Cornflower_blue" />

        <TextView
            android:id="@+id/breadcrumb_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học sinh - sinh viên"
            android:textSize="16dp"
            android:textColor="@color/Cornflower_blue"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/Cornflower_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết sinh viên"
            android:textSize="16dp"
            android:textColor="@color/Cornflower_blue" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="8dp"
            android:paddingTop="10dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/Cornflower_blue"
                android:showDividers="middle"
                android:background="@drawable/background_table"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:elevation="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/Cornflower_blue"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:src="@drawable/students_2995459"
                        android:id="@+id/image_de_student"
                        android:layout_marginStart="120dp"/>

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/Cornflower_blue"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/tv_de_name_student"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TÊN SINH VIÊN"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Bittersweet"
                        android:gravity="center"
                        android:padding="14dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mã số"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_code_student"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Mã số"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lớp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_code_class"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Mã lớp"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngày sinh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="Ngày sinh"
                        android:textColor="@color/Cornflower_blue"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giới tính"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_gender_student"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Giới tính"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Địa chỉ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_locate_student"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="2"
                        android:text="Địa chỉ"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SDT"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_phonenumber_student"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Số điện thoại"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_email_student"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Email"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngày nhập học"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_admissiondate_student"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Ngày nhập học"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trình độ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_name_level"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Trình độ"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hệ đào tạo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />

                    <TextView
                        android:id="@+id/tv_de_program"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Hệ đào tạo"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:textColor="@color/Cornflower_blue"
                        android:gravity="center"
                        android:padding="14dp" />
                </TableRow>
            </TableLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyView_transcript"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_table2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:elevation="8dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tổng tín chỉ tích lũy"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_sum_credit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="end"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Điểm trung bình tích lũy (Thang điểm 10)"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_sum_avg_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Điểm trung bình tích lũy (Thang điểm 4)"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_sum_avg_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Xếp loại"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_classification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:gravity="end"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            app:menu_fab_size="normal"
            app:menu_colorPressed="@color/Cornflower_blue"
            app:menu_colorNormal="@color/Cornflower_blue"
            app:menu_icon="@drawable/baseline_format_list_bulleted_24"
            app:menu_openDirection="up"
            app:menu_showShadow="true">


            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editButtonStudent"
                android:src="@drawable/baseline_edit_24"
                app:fab_showShadow="true"
                app:fab_colorNormal="@color/Mantis"
                app:fab_size="mini"/>

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButtonStudent"
                android:src="@drawable/baseline_delete_24"
                app:fab_showShadow="true"
                app:fab_colorNormal="@color/Bittersweet"
                app:fab_size="mini"/>

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>
</LinearLayout>
