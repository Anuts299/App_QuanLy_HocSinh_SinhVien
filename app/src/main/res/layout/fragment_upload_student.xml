<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".student_manage.UploadFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/breadcrumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/breadcrumb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang chủ"
            android:textColor="@color/Cornflower_blue"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/Cornflower_blue" />

        <TextView
            android:id="@+id/breadcrumb_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học sinh - Sinh viên"
            android:textSize="16dp"
            android:textColor="@color/Cornflower_blue"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/Cornflower_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm HS - SV"
            android:textSize="16dp"
            android:textColor="@color/Cornflower_blue" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/custom_box">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thêm Học sinh - Sinh viên"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:textColor="@color/Cornflower_blue"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"/>
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/students_2995459"
                    android:id="@+id/image_upload_student"
                    android:layout_marginBottom="20dp"/>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="1">

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mã sinh viên"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="-10dp"
                                />

                            <EditText
                                android:id="@+id/edt_code_student"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Tự động"
                                android:background="@drawable/custom_box"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:imeOptions="actionNext"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="10dp"
                                android:focusable="false"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tên sinh viên"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="-10dp"
                                />

                            <EditText
                                android:id="@+id/edt_name_student"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Nhập họ tên"
                                android:background="@drawable/custom_box"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:imeOptions="actionNext"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ngày sinh"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                />

                            <TextView
                                android:id="@+id/tv_birthdate_student"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Chọn ngày sinh"
                                android:background="@drawable/custom_box"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:imeOptions="actionNext"
                                android:textColor="@color/black"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Giới tính"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                />

                            <Spinner
                                android:id="@+id/spinner_gender"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_box"
                                android:paddingStart="10dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:layout_marginBottom="15dp"
                                android:textAppearance="@style/SpinnerText"
                                android:spinnerMode="dropdown"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Quê quán"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                />

                            <EditText
                                android:id="@+id/edt_locate_student"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Nhập quê quán"
                                android:background="@drawable/custom_box"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:imeOptions="actionNext"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Số điện thoại"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                />

                            <EditText
                                android:id="@+id/edt_phonenumber_student"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Nhập số điện thoại"
                                android:background="@drawable/custom_box"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:imeOptions="actionNext"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Email"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                />

                            <EditText
                                android:id="@+id/edt_email_student"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Nhập Email"
                                android:background="@drawable/custom_box"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:imeOptions="actionNext"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ngày nhập học"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="-10dp"
                                />

                            <TextView
                                android:id="@+id/tv_admissiondate_student"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Chọn ngày nhập học"
                                android:background="@drawable/custom_box"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:maxLines="1"
                                android:textSize="18sp"
                                android:ellipsize="end"
                                android:textColor="@color/black"
                                android:imeOptions="actionNext"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Lớp học"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                />

                            <Spinner
                                android:id="@+id/spinner_name_class"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_box"
                                android:paddingStart="10dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:layout_marginBottom="15dp"
                                android:textAppearance="@style/SpinnerText"
                                android:spinnerMode="dropdown"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Trình độ"
                                android:textColor="@color/Cornflower_blue"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                />

                            <Spinner
                                android:id="@+id/spinner_name_level"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_box"
                                android:paddingStart="10dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:layout_marginBottom="15dp"
                                android:textAppearance="@style/SpinnerText"
                                android:spinnerMode="dropdown"
                                android:layout_marginStart="10dp"
                                android:layout_weight="3"/>
                        </TableRow>
                    </TableLayout>


                <Button
                    android:id="@+id/btn_upload_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THÊM SINH VIÊN"
                    android:backgroundTint="@color/Cornflower_blue"
                    app:cornerRadius="30dp"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>