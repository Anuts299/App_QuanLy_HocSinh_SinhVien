<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".subject_manage.UpdateFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/breadcrumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/breadcrumb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang chủ"
            android:textColor="@color/Cornflower_blue"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/Cornflower_blue" />

        <TextView
            android:id="@+id/breadcrumb_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Môn học"
            android:textSize="16dp"
            android:textColor="@color/Cornflower_blue"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/Cornflower_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa môn học"
            android:textSize="16dp"
            android:textColor="@color/Cornflower_blue" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/custom_box">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa Môn Học"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/Cornflower_blue"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_ud_code_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_box"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="18sp"
                android:layout_marginBottom="15dp" />
            <EditText
                android:id="@+id/edt_ud_name_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên môn học"
                android:background="@drawable/custom_box"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="15dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SốG LT"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue"
                        android:paddingTop="10dp" />

                    <EditText
                        android:id="@+id/edt_ud_lecturer_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số giờ LT"
                        android:background="@drawable/custom_box"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="2"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SốG TH"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue" />

                    <EditText
                        android:id="@+id/edt_ud_lap_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số giờ TH"
                        android:background="@drawable/custom_box"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="2"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số ĐVHT"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Cornflower_blue" />

                    <TextView
                        android:id="@+id/tv_ud_credit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số Tín chỉ"
                        android:background="@drawable/custom_box"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="2"/>
                </TableRow>
            </TableLayout>

            <Spinner
                android:id="@+id/spinner_ud_name_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_box"
                android:paddingStart="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="15dp"
                android:textAppearance="@style/SpinnerText"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/btn_ud_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHỈNH SỬA MÔN HỌC"
                android:backgroundTint="@color/Cornflower_blue"
                app:cornerRadius="25dp"
                android:textSize="18dp"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>