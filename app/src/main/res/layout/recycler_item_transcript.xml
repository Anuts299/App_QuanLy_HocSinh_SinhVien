<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardMajor"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/Cornflower_blue"
            android:showDividers="middle">
            <TextView
                android:id="@+id/tv_name_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên Môn học"
                android:textColor="@color/Cornflower_blue"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_code_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mã Môn học"
                android:textColor="@color/Bittersweet"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Số ĐVHT"
                android:textColor="@color/Cornflower_blue"
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_credit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Số ĐVHT"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Điểm KTTX"
                android:textColor="@color/Cornflower_blue"
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="5"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_grades_kttx1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_grades_kttx2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_grades_kttx3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Điểm KTĐK"
                android:textColor="@color/Cornflower_blue"
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="5"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_grades_ktdk1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_grades_ktdk2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_grades_ktdk3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TBM"
                android:textColor="@color/Cornflower_blue"
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_average_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thi lần 1"
                android:textColor="@color/Cornflower_blue"
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_final_exam1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thi lần 2"
                android:textColor="@color/Cornflower_blue"
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_final_exam2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TBHP"
                android:textColor="@color/Bittersweet"
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_average_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/Bittersweet"
                android:gravity="end"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>