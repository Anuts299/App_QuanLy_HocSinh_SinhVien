<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".class_manage.DetailFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/Cornflower_blue"
        android:showDividers="middle"
        android:background="@drawable/background_table"
        android:layout_margin="20dp"
        android:elevation="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/Cornflower_blue"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_de_name_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MÃ LỚP"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên lớp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

            <TextView
                android:id="@+id/tv_de_name_class2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tên lớp"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Khoa"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

            <TextView
                android:id="@+id/tv_de_name_faculties"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tên khoa"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cố vấn"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

            <TextView
                android:id="@+id/tv_de_name_lecturer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="14dp"
                android:text="Tên cố vấn"
                android:textColor="@color/Cornflower_blue"
                android:textSize="20sp"
                android:textStyle="normal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Năm học"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

            <TextView
                android:id="@+id/tv_de_academic_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Năm học"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />
        </TableRow>
    </TableLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            app:menu_fab_size="normal"
            app:menu_colorPressed="@color/Cornflower_blue"
            app:menu_colorNormal="@color/Cornflower_blue"
            app:menu_icon="@drawable/baseline_format_list_bulleted_24"
            app:menu_openDirection="up"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editButtonClass"
                android:src="@drawable/baseline_edit_24"
                app:fab_showShadow="true"
                app:fab_colorNormal="@color/Mantis"
                app:fab_size="mini"/>

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButtonClass"
                android:src="@drawable/baseline_delete_24"
                app:fab_showShadow="true"
                app:fab_colorNormal="@color/Bittersweet"
                app:fab_size="mini"/>
            
        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>
</FrameLayout>
