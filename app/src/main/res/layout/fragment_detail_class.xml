<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".class_manage.DetailFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/Cornflower_blue"
        android:showDividers="middle"
        android:background="@drawable/background_table"
        android:layout_margin="20dp"
        android:elevation="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/Cornflower_blue"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_de_name_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TÊN LỚP"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Khoa"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

            <TextView
                android:id="@+id/tv_de_name_faculties"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tên khoa"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cố vấn"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

            <TextView
                android:id="@+id/tv_de_name_lecturer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="14dp"
                android:text="Tên cố vấn"
                android:textColor="@color/Cornflower_blue"
                android:textSize="20sp"
                android:textStyle="normal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Năm học"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />

            <TextView
                android:id="@+id/tv_de_academic_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Năm học"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/Cornflower_blue"
                android:gravity="center"
                android:padding="14dp" />
        </TableRow>
    </TableLayout>
</FrameLayout>
